<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.springboot.dao.MessageDao">


    <select id="findBySearch" resultType="com.example.springboot.entity.Message">
        select `message`.* from `message`
        <where>
            <if test="search != null and search.content != null and search.content != ''">
                and `message`.`content` like concat ('%', #{search.content}, '%')
            </if>
            <if test="userId != null">
                and `message`.`userId` = #{userId}
            </if>
            <if test="role != null">
                and `message`.`role` = #{role}
            </if>
        </where>
    </select>

</mapper>