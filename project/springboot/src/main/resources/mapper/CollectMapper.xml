<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.springboot.dao.CollectDao">

    <resultMap id="BaseResultMap" type="com.example.springboot.entity.Collect">
        <id column="id" jdbcType="INTEGER" property="id" />
        <result column="courseresourceId" jdbcType="INTEGER" property="courseresourceId" />
        <result column="adminId" jdbcType="INTEGER" property="adminId" />
        <result column="createtime" jdbcType="VARCHAR" property="createtime" />
        <result column="chapterId" jdbcType="INTEGER" property="chapterId" />
    </resultMap>

    <sql id="Base_Column_List">
        id, courseresourceId, adminId, createtime, chapterId
    </sql>

    <insert id="insert" parameterType="com.example.springboot.entity.Collect" useGeneratedKeys="true" keyProperty="id">
        insert into collect (courseresourceId, adminId, createtime, chapterId)
        values (#{courseresourceId,jdbcType=INTEGER},
                #{adminId,jdbcType=INTEGER},
                #{createtime,jdbcType=VARCHAR},
                #{chapterId,jdbcType=INTEGER})
    </insert>

    <delete id="deleteByPrimaryKey" parameterType="java.lang.Integer">
        delete from collect
        where id = #{id,jdbcType=INTEGER}
    </delete>

    <delete id="deleteByResourceAndUser">
        delete from collect
        where courseresourceId = #{courseresourceId,jdbcType=INTEGER}
          and adminId = #{adminId,jdbcType=INTEGER}
    </delete>

    <select id="findByUserId" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        from collect
        where adminId = #{adminId,jdbcType=INTEGER}
        order by createtime desc
    </select>

    <select id="countByResourceAndUser" resultType="java.lang.Integer">
        select count(*)
        from collect
        where courseresourceId = #{courseresourceId,jdbcType=INTEGER}
          and adminId = #{adminId,jdbcType=INTEGER}
    </select>
</mapper>