<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.springboot.dao.TeacherDao">

    <select id="getAll" resultType="com.example.springboot.entity.Teacher">
        select `teacher`.* from `teacher`
    </select>

    <select id="findBySearch" resultType="com.example.springboot.entity.Teacher">
        select `teacher`.*, `grade`.`gradeName` as gradeName from `teacher`
        left join `grade` on `teacher`.`gradeId` = `grade`.id

        where 1 = 1
        <if test="search != null and search.userName != null and search.userName != ''">
            and `teacher`.`userName` like concat ('%', #{search.userName}, '%')
        </if>

    </select>

</mapper>